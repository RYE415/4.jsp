<meta charset="UTF-8">
<script type="text/javascript" src="http://code.jquery.com/jquery-3.3.1.min.js">
</script>
<title>07.$.getJson().html</title>
<!-- 
[
  {
   "id":"1",
   "name":"레몬",
   "price":"3000",
   "description":"피로회복에 좋고 비타민C 풍부"
  },
  ,,,
 -->
<script>
  $(function(){
	  $.ajax({
		  url:'item2.json',
		  datatype:'json',/*datatype:문서종류명*/
		  success:function(data){
			  //분리작업:파싱
			  $('#treeData').append('<tr><td>id</td>'+'<td>name</td>'+'<td>price</td><td>description</td></tr>');
	  	  /*
	  	  불러올 데이터가 태그 덩어리->$(반복선택자).each(~)=>$(this)
	  	  불러올 데이터가 태그 X -> $.each(컬렉션객체(배열),콜백함수->this)
	  	  */
	  	  $.each(data,function(){
	  		  $('#treeData').append('<tr><td>'+this.id+'</td><td>'
	  				  				+this.name+'</td><td>'
	  				  				+this.price+'</td><td>'
	  				  				+this.description+'</td></tr>');
	  	  })//each
		  }//success
	  })//$.ajax
  })
</script>
</head>
<body>
	<table border="1" id="treeData"></table>
	
</body>
</html>